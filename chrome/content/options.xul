	<setting pref="extensions.enhancedmiddleclick.mainMenu" type="menulist" title="&title-mainMenu;" desc="&desc-mainMenu;">
		<menulist>
			<menupopup>
				<menuitem label="&label-history;" value="history" />
				<menuitem label="&label-tabs;" value="tabs" />
				<menuitem label="&label-tabsGroups;" value="tabsGroupsMenu" />
