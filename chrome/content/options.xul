	<setting type="bool" pref="extensions.enhancedmiddleclick.useSecondaryMenu" title="&title-useSecondaryMenu;" desc="&desc-useSecondaryMenu;" />
	<setting type="bool" pref="extensions.enhancedmiddleclick.refreshOnTabClose" title="&title-refreshOnTabClose;" desc="&desc-refreshOnTabClose;" />
